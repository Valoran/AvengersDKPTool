<Window x:Class="AvengersDKPTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AvengersDKPTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Everquest Folder Path:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="132"/>
        <TextBox x:Name="GamePathBox" HorizontalAlignment="Left" Margin="142,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="374" IsEnabled="False" TextChanged="GamePathBox_TextChanged"/>
        <Button x:Name="GamePathBrowse" Content="Browse" HorizontalAlignment="Left" Margin="521,12,0,0" VerticalAlignment="Top" Click="GamePathBrowse_Click"/>
        <TabControl Margin="0,41,0,0">
            <TabItem x:Name="AttendanceTab" Header="Attendance" IsSelected="True">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="29*"/>
                        <ColumnDefinition Width="765*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Dump files" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="118"/>
                    <ListBox x:Name="DumpFilesList" Margin="10,41,569,0" Grid.ColumnSpan="2" SelectionChanged="DumpFilesList_SelectionChanged" />
                    <ListBox x:Name="AttendeeGrid" Grid.Column="1" Margin="267,41,0,0"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="LootTab" Header="Loot">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="ChatLogList" Margin="0,28,573,0" SelectionChanged="ChatLogList_SelectionChanged"/>
                    <Label Content="Logs" HorizontalAlignment="Left" Margin="10,-3,0,0" VerticalAlignment="Top"/>
                    <ListBox x:Name="LootList" Margin="252,28,0,0"/>
                </Grid>
            </TabItem>

            <TabItem x:Name="MembersTab" Header="Members" IsSelected="True">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="29*"/>
                        <ColumnDefinition Width="765*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="MainsList" Grid.Column="1" Margin="0,29,540,0"/>
                    <ListBox x:Name="AltsList" Grid.Column="1" Margin="302,29,234,0"/>
                    <Button x:Name="MainToAltBtn" Content="⇛" Grid.Column="1" HorizontalAlignment="Left" Margin="254,114,0,0" VerticalAlignment="Top" Width="20" FontSize="20"/>
                    <Button x:Name="AltToMainBtn" Content="⇚" Grid.Column="1" HorizontalAlignment="Left" Margin="254,183,0,0" VerticalAlignment="Top" FontSize="20"/>
                    <Label Content="Mains" Grid.Column="1" HorizontalAlignment="Left" Margin="0,3,0,0" VerticalAlignment="Top"/>
                    <Label Content="Alts/Other" Grid.Column="1" HorizontalAlignment="Left" Margin="302,3,0,0" VerticalAlignment="Top"/>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
